import streamlit as st
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.datasets import load_wine, load_iris, load_breast_cancer
from sklearn.model_selection import train_test_split
from sklearn.ensemble import RandomForestClassifier
from sklearn.metrics import classification_report, confusion_matrix, accuracy_score

# =======================
# Sidebar chá»n dataset
# =======================
st.sidebar.title("âš™ï¸ TÃ¹y chá»n")
dataset_name = st.sidebar.selectbox("Chá»n Dataset", ["Wine", "Iris", "Breast Cancer"])

def load_dataset(name):
    if name == "Wine":
        data = load_wine()
    elif name == "Iris":
        data = load_iris()
    else:
        data = load_breast_cancer()
    X = pd.DataFrame(data.data, columns=data.feature_names)
    y = pd.Series(data.target, name="target")
    return X, y, data

X, y, data_info = load_dataset(dataset_name)

# =======================
# Hiá»ƒn thá»‹ dataset
# =======================
st.title("ğŸŒ³ Random Forest Classifier Demo")
st.write(f"### ğŸ“Š Dataset: {dataset_name}")
st.write("Sá»‘ máº«u:", X.shape[0], " | Sá»‘ Ä‘áº·c trÆ°ng:", X.shape[1])
st.dataframe(X.head())

# =======================
# EDA - PhÃ¢n tÃ­ch dá»¯ liá»‡u
# =======================
if st.checkbox("ğŸ” Hiá»ƒn thá»‹ thá»‘ng kÃª dá»¯ liá»‡u"):
    st.write(X.describe())

if st.checkbox("ğŸ“ˆ Váº½ phÃ¢n phá»‘i cÃ¡c Ä‘áº·c trÆ°ng"):
    fig, ax = plt.subplots(figsize=(10, 6))
    X.hist(ax=ax)
    st.pyplot(fig)

# =======================
# Cáº¥u hÃ¬nh mÃ´ hÃ¬nh
# =======================
st.sidebar.subheader("Cáº¥u hÃ¬nh Random Forest")
n_estimators = st.sidebar.slider("Sá»‘ cÃ¢y (n_estimators)", 10, 300, 100, 10)
max_depth = st.sidebar.slider("Äá»™ sÃ¢u tá»‘i Ä‘a (max_depth)", 1, 20, 5, 1)
criterion = st.sidebar.selectbox("TiÃªu chuáº©n chia nhÃ¡nh", ["gini", "entropy", "log_loss"])
test_size = st.sidebar.slider("Tá»· lá»‡ test", 0.1, 0.5, 0.3, 0.05)

# =======================
# Táº¡o mÃ´ hÃ¬nh táº¡m Ä‘á»ƒ tÃ­nh feature importance
# (pháº£i lÃ m trÆ°á»›c khi chá»n top_features)
# =======================
temp_model = RandomForestClassifier(random_state=42)
temp_model.fit(X, y)
feat_importances = pd.Series(temp_model.feature_importances_, index=X.columns).sort_values(ascending=False)

# =======================
# Chá»n sá»‘ Ä‘áº·c trÆ°ng quan trá»ng Ä‘á»ƒ dá»± Ä‘oÃ¡n
# =======================
st.sidebar.subheader("Chá»n sá»‘ Ä‘áº·c trÆ°ng quan trá»ng Ä‘á»ƒ nháº­p dá»± Ä‘oÃ¡n")
top_k = st.sidebar.slider("Sá»‘ Ä‘áº·c trÆ°ng quan trá»ng", 1, len(X.columns), 3)
top_features = feat_importances.head(top_k).index.tolist()
st.write(f"ğŸ‘‰ CÃ¡c Ä‘áº·c trÆ°ng Ä‘Æ°á»£c chá»n: {top_features}")

# =======================
# Huáº¥n luyá»‡n mÃ´ hÃ¬nh (chá»‰ dÃ¹ng top_features)
# =======================
X_train, X_test, y_train, y_test = train_test_split(
    X[top_features], y, test_size=test_size, random_state=42
)

model = RandomForestClassifier(
    n_estimators=n_estimators,
    max_depth=max_depth,
    criterion=criterion,
    random_state=42
)
model.fit(X_train, y_train)
y_pred = model.predict(X_test)

# =======================
# Káº¿t quáº£
# =======================
acc = accuracy_score(y_test, y_pred)
st.write(f"### ğŸ¯ Äá»™ chÃ­nh xÃ¡c mÃ´ hÃ¬nh: **{acc:.2f}**")

st.write("### ğŸ” Confusion Matrix")
fig, ax = plt.subplots()
sns.heatmap(confusion_matrix(y_test, y_pred), annot=True, fmt="d", cmap="Blues", ax=ax)
st.pyplot(fig)

st.write("### ğŸ“‘ Classification Report")
st.text(classification_report(y_test, y_pred))

# =======================
# Feature Importance (theo mÃ´ hÃ¬nh cuá»‘i cÃ¹ng)b
# =======================
st.write("### ğŸŒŸ Feature Importance (theo mÃ´ hÃ¬nh chá»n top_features)")
final_importances = pd.Series(model.feature_importances_, index=top_features).sort_values(ascending=False)
st.bar_chart(final_importances)

# =======================
# Dá»± Ä‘oÃ¡n máº«u má»›i
# =======================
st.write("### ğŸ§ª Thá»­ dá»± Ä‘oÃ¡n máº«u má»›i")
sample_input = {}
for col in top_features:
    sample_input[col] = st.number_input(
        f"{col}",
        float(X[col].min()),
        float(X[col].max()),
        float(X[col].mean())
    )

if st.button("Dá»± Ä‘oÃ¡n"):
    input_df = pd.DataFrame([sample_input])
    prediction = model.predict(input_df[top_features])[0]
    st.success(f"Káº¿t quáº£ dá»± Ä‘oÃ¡n: **{data_info.target_names[prediction]}**")
